{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Skills Specification",
  "description": "Schema for validating SKILL.md frontmatter according to agentskills.io",
  "type": "object",
  "required": ["name", "description"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the skill",
      "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$",
      "minLength": 1,
      "maxLength": 64
    },
    "description": {
      "type": "string",
      "description": "Clear description of what the skill does and when to use it",
      "minLength": 1,
      "maxLength": 1024
    },
    "mcp_servers": {
      "type": "array",
      "description": "MCP servers required by this skill",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$"
      }
    },
    "custom_tools": {
      "type": "array",
      "description": "Custom tools required by this skill",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$"
      }
    },
    "allowed_tools": {
      "type": "array",
      "description": "Tools that are pre-approved for this skill to use",
      "items": {
        "type": "string"
      }
    },
    "license": {
      "type": "string",
      "description": "License for the skill"
    },
    "compatibility": {
      "type": "string",
      "description": "Environment requirements and compatibility notes",
      "maxLength": 500
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the skill",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
